<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gustavo.brilhante.movieshelfs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.MovieShelfApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity_"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <fragment
            android:name=".fragments.fragments.SearchFragment_"
            android:screenOrientation="portrait" />
        <fragment
            android:name=".fragments.fragments.ShelfFragment_"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ShowMovieActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SearchListActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SerieDisplayActivity_"
            android:screenOrientation="portrait"/>
    </application>

</manifest>